            main {
                width: 960px;
            }
            .game-container {
                width: 100%;
                height: 80vh;
                display: flex;
                justify-content: center;
                align-items: center;
                background-color: #000;
                border-radius: 8px;
                overflow: hidden;
            }
            iframe {
                width: 100%;
                height: 100%;
                border: none;
            }
        </style>
    </head>
